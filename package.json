{
    "name": "hypersign-auth-node-sdk",
    "version": "6.1.0",
    "description": "Node JS SDK to intergrate Hypersign passwordless authentication in the backend",
    "main": "dist/hypersign-auth-node-sdk.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "npm run prettier && webpack -p",
        "build:dev": "npm run prettier && webpack --mode=development",
        "prepare": "npm run prettier && npm run build",
        "prettier": "prettier --config .prettierrc.json --write src/**/*.js"
    },
    "keywords": [
        "hypersign",
        "HID",
        "passwordless",
        "openId",
        "blockchain",
        "ssi",
        "privacy",
        "authorization",
        "authentication"
