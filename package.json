    "author": "Team Hypersign",
    "license": "MIT",
    "dependencies": {
        "hs-ssi-sdk": "github:hypersign-protocol/hs-ssi-sdk#credential-register-optional",
        "jsonwebtoken": "^8.5.1",
        "node-fetch": "^2.6.1",
        "nodemailer": "^6.4.11",
        "ramda": "^0.28.0",
        "simple-node-logger": "^21.8.12",
        "uuid": "^8.3.2",
        "websocket": "^1.0.33"
    },
    "devDependencies": {
        "@babel/cli": "7.10.1",
        "@babel/core": "7.10.2",
        "@babel/node": "7.10.1",
        "@babel/plugin-proposal-export-default-from": "7.10.1",
        "@babel/plugin-proposal-object-rest-spread": "7.10.1",
        "@babel/plugin-transform-runtime": "7.10.1",
        "@babel/preset-env": "7.10.2",
        "@babel/register": "7.10.1",
        "@babel/runtime": "^7.10.2",
        "babel-loader": "^8.0.0-beta.2",
        "babel-plugin-ramda": "^2.0.0",
        "prettier": "^2.4.1",
